<% include blocks/header.ejs %>
<% include blocks/navbar.ejs %>

    <h3>Здесь будут отображаться услуги
    </h3>

    <% if(services.length){ %>
      <ul>
          <!--// итерация-->
          <% services.forEach((services) => { %>
            <li class="service">
              <form id="form" action="/deactivate_service" method="POST">
                <label>
                  <% if(services.active){ %>
                    <div class="switch">
                      <label>
                        <input type="checkbox" checked name="active" onclick="submit()">
                        <span class="lever"></span>
                      </label>
                    </div>
                    <span><a href="/category/<%- services.name %>"><%- services.name %></a></span>
                  <% } else{ %>
                    <div class="switch">
                        <label>
                          <input type="checkbox" name="active" onclick="submit()">
                          <span class="lever"></span>
                        </label>
                      </div>
                    <span class="deactive"><%- services.name %></span>
                  <% } %>

                  <span><a href="/category/<%- services.category %>"><%- services.category %></a></span>
                  <span><%- services.price %></span>
                  <input type="hidden" value="<%- services._id %>" name="id">
                  
                  <button class="btn btn-success" type="submit">Сохранить</button>
                </label>
              </form>
            </li>
          <% }) %>
        </ul>
    <% } else{ %>
      <p>Нет услуг</p>
    <% } %>

    <script>
        function submit() {
          document.getElementById('form').submit();
    </script>

<% include blocks/footer.ejs %>